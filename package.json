{
  "name": "node-typescript-koa-rest",
  "version": "1.4.1",
  "description": "API REST using NodeJS and KOA framework, typescript. TypeORM for SQL with class-validators. Middlewares JWT, CORS, Winston Logger.",
  "main": "dist/server.js",
  "scripts": {
    "watch-server": "nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node src/server.ts",
    "build-ts": "tsc",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "serve": "node dist/server.js",
    "build": "npm run tslint && npm run build-ts",
    "start": "npm run serve"
  },
  "engines": {
    "node": "8.x.x",
    "npm": "5.x.x"
  },
  "author": "Javier Aviles",
  "license": "MIT",
  "repository": "github:javieraviles/node-typescript-koa-rest",
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/koa": "2.0.44",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-jwt": "^3.3.0",
    "@types/koa-router": "^7.0.28",
    "@types/koa__cors": "^2.2.2",
    "@types/node": "^10.7.0",
    "@types/shelljs": "^0.8.0",
    "nodemon": "^1.17.4",
    "shelljs": "^0.8.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.10.0",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "@koa/cors": "^2.2.1",
    "class-validator": "^0.9.1",
    "dateformat": "^3.0.3",
    "dotenv": "^6.0.0",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^4.0.0",
    "koa-jwt": "^3.3.2",
    "koa-router": "^7.4.0",
    "pg": "^7.4.3",
    "pg-connection-string": "^2.0.0",
    "reflect-metadata": "^0.1.12",
    "typeorm": "^0.2.6",
    "winston": "^3.0.0"
  }
}
